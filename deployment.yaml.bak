apiVersion: apps/v1
kind: Deployment
metadata:
  name: test-stultus
  labels:
    app: test-stultus
spec:
  replicas: 3
  selector:
    matchLabels:
      app: test-stultus
  template:
    metadata:
      labels:
        app: test-stultus
    spec:
      containers:
      - name: test-stultus-test
        image: ilikecontainers/test_stultus_scraper:latest
        env:
        - name: DATABASE_URL
          valueFrom:
            secretKeyRef:
              name: db-secret
              key: DATABASE_URL
